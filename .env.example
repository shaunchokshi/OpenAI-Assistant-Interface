# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/dbname
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=dbname

# Session Security
SESSION_SECRET=replace_with_a_very_secure_random_string

# OpenAI API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ASSISTANT_ID=asst_your_assistant_id

# OAuth Configuration - GitHub
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret
GITHUB_CALLBACK=http://localhost:5000/auth/github/callback

# OAuth Configuration - Google
GOOGLE_ID=your_google_client_id
GOOGLE_SECRET=your_google_client_secret
GOOGLE_CALLBACK=http://localhost:5000/auth/google/callback

# Email Configuration
SMTP_RELAY_SERVER=smtp.example.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=your_smtp_username
SMTP_RELAY_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com

# Security Settings (optional)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window
# FILE_UPLOAD_MAX_SIZE=52428800  # 50MB in bytes